<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BleTracking.Pages.TerminalPage"
             xmlns:local1="clr-namespace:BleTracking.ViewModel"
             Title="Terminal">
    <ContentPage.BindingContext>
        <local1:DigitViewModel Digit="0"/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                
                <Label Grid.Column="0" Grid.Row="0" VerticalOptions="Start" FontSize="Large"
                       Text="{Binding Digit, StringFormat='Data: {0}'}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>