<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BleTracking.SelectDevicePage"
             Title="Select Device">
    
    
    <ContentPage.Content>
        <StackLayout>

            <Frame HasShadow="True"
                           CornerRadius="10"
                           Margin="8,8,8,8">
                <ListView x:Name="lvBondedDevices" ItemSelected="lvBondedDevices_ItemSelected" 
                          SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" Detail="{Binding Address}" TextColor="#263238"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>
        </StackLayout>
    </ContentPage.Content>


</ContentPage>